        <activity
            android:name=".home.search.post.ViewPostActivity"
            android:label="CustomPro Posts"
            android:parentActivityName=".shop.OpenShopActivity" />
        <activity
            android:name=".admin.AdminActivity"
            android:label="@string/title_activity_admin_acitivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mypost.MyPostActivity"
            android:label="My Post"
            android:parentActivityName=".home.CustomPro" />
        <activity
            android:name=".home.search.post.bids.offer.OfferPostActivity"
            android:label="Offer Information" />
        <activity
            android:name=".home.search.post.ViewOfferActivity"
            android:label="View Offer Information" />
        <activity
            android:name=".myorder.MyOrderActivity"
            android:label="My Orders"
            android:parentActivityName=".home.CustomPro" />
        <activity
            android:name=".mynotification.NotificationActivity"
            android:label="My Notifications"
            android:parentActivityName=".home.CustomPro" />
        <activity
            android:name=".admin.accounts.AdminRegisterActivity"
            android:label="Add New Account"
            android:parentActivityName=".admin.AdminActivity" />
        <activity
            android:name=".shop.nwo.MakerViewOrderActivity"
            android:label="Order Information"
            android:parentActivityName=".shop.OpenShopActivity" />
        <activity
            android:name=".mynwo.NewWorldOrderActivity"
