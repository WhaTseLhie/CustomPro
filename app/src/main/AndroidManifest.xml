        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.MainActivity"
            android:label="CustomPro Login" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key" />

        <activity
            android:name=".home.CustomPro"
            android:label="@string/title_activity_custom_pro"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".register.RegisterActivity"
            android:label="CustomPro Registration"
            android:parentActivityName=".login.MainActivity" />
        <activity
            android:name=".profile.ProfileActivity"
            android:label="My Profile"
            android:parentActivityName=".home.CustomPro" />
        <activity
            android:name=".settings.AccountSettingsActivity"
            android:label="Account Settings"
            android:parentActivityName=".settings.AccountSettingsActivity" />
        <activity
            android:name=".shop.OpenShopActivity"
            android:label="Open Shop"
            android:parentActivityName=".home.CustomPro" />
        <activity
            android:name=".shop.product.AddProductActivity"
            android:label="Add Product"
            android:parentActivityName=".shop.OpenShopActivity" />
        <activity
            android:name=".shop.ShopRegisterActivity"
            android:label="Shop Registration"
            android:parentActivityName=".shop.OpenShopActivity" />
        <activity
            android:name=".home.search.post.AddPostActivity"
            android:label="CustomPro Post"
            android:parentActivityName=".home.CustomPro" />
        <activity
            android:name=".shop.request.AddRequestActivity"
            android:label="Add Request"
            android:parentActivityName=".shop.OpenShopActivity" />
        <activity
            android:name=".shop.request.RequestActivity"
            android:label="Request Information"
            android:parentActivityName=".shop.OpenShopActivity" />
        <activity
            android:name=".myrequest.MyRequestActivity"
            android:label="My Orders"
            android:parentActivityName=".home.CustomPro" />
        <activity
            android:name=".shop.product.ViewProductActivity"
